{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "aws_source_ami": ".",
    "ssh_username": "ubuntu",
    "aws_ami_users": "",
    "aws_bucket_name": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami`}}",
      "instance_type": "t2.micro",
      "ami_name": "packer_ubuntu_ami_{{timestamp}}",
      "ami_description": "Ubuntu AMI for CSYE 6225 - Spring 2020",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_users": "{{user `aws_ami_users`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [],
      "inline": [
        "sudo apt-get clean",
        "sudo apt-get install --fix-broken",
        "sudo apt-get update -y",
        "sudo apt-get upgrade -y",
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
        "sudo apt-get install openjdk-11-jre-headless -y",
        "sudo apt-get install openjdk-11-jdk-headless -y",
        "sudo apt-get install ca-certificates-java",
        "sudo apt-get install maven -y",
        "sudo apt-get install ruby -y",
        "sudo apt-get install wget -y",
        "cd /home/ubuntu",
        "wget --no-check-certificate https://{{user `aws_bucket_name`}}.s3.{{user `aws_region`}}.amazonaws.com/latest/install",
        "sudo chmod +x ./install",
        "sudo ./install auto",
        "sudo service codedeploy-agent status"
      ]
    }
  ]
}
